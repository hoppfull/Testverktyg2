<Application x:Class="AdminApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AdminApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="Key_lbl_Header" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="26" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#B1DAEE" />
        </Style>

        <Style x:Key="Key_tbx_AdminAppLoginEmail" TargetType="TextBox">
            <Setter Property="Foreground" Value="#1D6D93" />
            <Setter Property="Background" Value="#7EBBD9" />
        </Style>
        <Style x:Key="Key_tbx_AdminAppLoginPassword" TargetType="TextBox">
            <Setter Property="Foreground" Value="#1D6D93" />
            <Setter Property="Background" Value="#7EBBD9" />
        </Style>

        <Style x:Key="Key_tbl_AdminAppEmailPlaceholder" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Text, ElementName=tbx_AdminAppLoginEmail}" Value="">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Key_tbl_AdminAppPasswordPlaceholder" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Text, ElementName=tbx_AdminAppLoginPassword}" Value="">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#B1DAEE" />
            <Setter Property="Background" Value="#1D6D93" />
        </Style>
    </Application.Resources>
</Application>
