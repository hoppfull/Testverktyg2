<Window x:Class="AdminApp.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="AdminPage" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Grid>

        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Prov &amp; Ämnen"></Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*" />
                            <RowDefinition Height="0.1*" />
                            <RowDefinition Height="0.4*" />
                            <RowDefinition Height="0.1*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                            <Label Content="Ämnen" />
                            <ScrollViewer>
                                <ListView x:Name="lvw_Subjects" Background="Gray">
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                    <Label Content="ASD" />
                                </ListView>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Orientation="Horizontal">
                            <Button Content="Lägg till" Click="btn_AddSubject_Click" />
                            <Button Content="Ta bort" Click="btn_RemoveSubject_Click" IsEnabled="False" />
                            <Button Content="Redigera" Click="btn_EditSubject_Click" IsEnabled="False" />
                            <TextBox x:Name="tbx_EditSubjectName" Visibility="Collapsed" />
                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <Label Content="Prov" />
                            <ScrollViewer>
                                <ListView x:Name="lvw_TestDefinitions" Background="Gray">
                                    
                                </ListView>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Orientation="Horizontal">
                            <Button Content="Granska prov" Click="btn_InspectTestDefinition_Click" IsEnabled="False" />
                        </StackPanel>
                    </Grid>
                </TabItem.Content>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Användare"></Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>

                    </Grid>
                </TabItem.Content>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Statistik"></Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>

                    </Grid>
                </TabItem.Content>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Inställningar"></Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>

                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
